{% extends "base.jinja" %}

{% block title %}{{ page_title }} - Political Data Dashboard{% endblock %}

{% block content %}
<div class="my-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page">Home</li>
        </ol>
    </nav>

    <h1 class="mb-4">Select a Jurisdiction</h1>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    {% for j in jurisdictions %}
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">{{ j }}</h5>
                    <p class="card-text text-muted">View political accountability metrics and indicators</p>
                    <a href="{{j|lower}}.html" class="btn btn-primary mt-auto">View Dashboard</a>
                </div>
            </div>
        </div>
    {% endfor %}
    </div>
</div>
{% endblock %}
