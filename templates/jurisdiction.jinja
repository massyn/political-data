{% extends "base.jinja" %}

{% block title %}{{ page_title }} - Political Data Dashboard{% endblock %}

{% block content %}
<div class="my-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">{{ jurisdiction }}</li>
        </ol>
    </nav>

    <h1 class="mb-4">{{ jurisdiction }}</h1>

    {% if government_scorecard %}
    <div class="content-card mb-4">
        <h2 class="mb-3">Government Scorecard</h2>
        <p class="text-muted mb-3">Performance summary of the last 5 governments across all tracked metrics</p>
        <div class="table-responsive">
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>Government</th>
                        <th>Party</th>
                        <th>Start Date</th>
                        <th class="text-center" style="color: #28a745;">Improved</th>
                        <th class="text-center" style="color: #ffc107;">No Change</th>
                        <th class="text-center" style="color: #dc3545;">Worsened</th>
                        <th class="text-center">Score</th>
                    </tr>
                </thead>
                <tbody>
                    {% for gov in government_scorecard %}
                    <tr>
                        <td><strong>{{ gov.name }}</strong></td>
                        <td><span class="badge" style="background-color: {{ gov.colour }};">{{ gov.party }}</span></td>
                        <td>{{ gov.date }}</td>
                        <td class="text-center"><strong style="color: #28a745; font-size: 1.2rem;">{{ gov.green }}</strong></td>
                        <td class="text-center"><strong style="color: #ffc107; font-size: 1.2rem;">{{ gov.amber }}</strong></td>
                        <td class="text-center"><strong style="color: #dc3545; font-size: 1.2rem;">{{ gov.red }}</strong></td>
                        <td class="text-center">
                            <strong style="font-size: 1.3rem; color: {% if gov.score > 0 %}#28a745{% elif gov.score < 0 %}#dc3545{% else %}#ffc107{% endif %};">
                                {{ "%+d"|format(gov.score) }}
                            </strong>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    {% endif %}

    {% set categories = {} %}
    {% for i in indicators %}
        {% if i['category'] not in categories %}
            {% set _ = categories.update({i['category']: []}) %}
        {% endif %}
        {% set _ = categories[i['category']].append(i) %}
    {% endfor %}

    <div class="content-card">
        <h2 class="mb-4">Indicators</h2>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Category</th>
                        <th>Indicator</th>
                        <th>Latest Date</th>
                        <th>Latest Value</th>
                        <th>Performance</th>
                    </tr>
                </thead>
                <tbody>
                    {% for category, category_indicators in categories.items()|sort %}
                    {% for i in category_indicators|sort(attribute='title') %}
                    <tr onclick="window.location='{{ jurisdiction.lower() }}_{{ i['id'].lower() }}.html';" style="cursor: pointer;">
                        <td>{% if loop.first %}<strong>{{ category }}</strong>{% endif %}</td>
                        <td>{{ i['title'] }}</td>
                        {% if i['data'] and i['data']|length > 0 %}
                        <td>{{ i['data'][0]['date'] }}</td>
                        <td>
                            {% for key, value in i['data'][0].items() %}
                                {% if key != 'date' %}
                                    <span class="me-3"><strong>{{ key|title }}:</strong> {{ value }}</span>
                                {% endif %}
                            {% endfor %}
                        </td>
                        <td>
                            {% if i.get('rag') %}
                            <span style="font-size: 1.5rem; color: {% if i.rag.status == 'Improved' %}#28a745{% elif i.rag.status == 'Worsened' %}#dc3545{% else %}#ffc107{% endif %};">
                                <strong>{{ i.rag.status_icon }}</strong>
                            </span>
                            <span class="ms-2">{{ "%+.2f"|format(i.rag.change) }} ({{ "%+.1f"|format(i.rag.change_pct) }}%)</span>
                            {% else %}
                            <span class="text-muted">â€”</span>
                            {% endif %}
                        </td>
                        {% else %}
                        <td colspan="3" class="text-muted">No data available</td>
                        {% endif %}
                    </tr>
                    {% endfor %}
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

</div>
{% endblock %}
